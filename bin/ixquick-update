#!/bin/bash

# Updates ixguard-tools

#Variables
BASEGITHUB="https://github.com/johnjbutler/ixguard/"
ixquickDIR="/ixquick"

# Check for flags
while getopts "d:" OPT; do
	case $OPT in
		d)
			# Set $ixguardDIR to argument
			ixquickDIR="$OPTARG"
			;;
		\?)
			echo "Invalid option: -$OPTARG" &>2
			exit 2
			;;
		:)
			echo "Option -$OPTARG requires an argument." &>2
			exit 2
			;;
	esac
done

# Shifts the option index to after the flags
shift $(($OPTIND-1))


/ixquick/bin/ixgap "----------------------------"

# Navigate to base directory
/ixguard/bin/pgap 0 "Installing in $ixquickDIR ..."
cd $ixquickDIR

git pull

# Check if git worked
if [[ $? != 0 ]]; then
  /ixquick/bin/ixgap "!!! Update failed. Try running as root (sudo ixquick-update) !!!"
  exit
fi

/ixguard/bin/pgap 2 "* Completing Update... *"

# Make sure bin files have execute permissions
# chmod -R +x $ixquickDIR/bin
echo "* Update complete! *"
/ixquick/bin/ixgap "----------------------------"
